@using RunSocial.Enum;
@model Corrida

<form method="POST" asp-action="Edit">
  <input type="hidden" value="AddressId" id="AddressId" />
  <div class="form-group">
    <label asp-for="Titulo">Título</label>
    <input asp-for ="Titulo" class="form-control" type="text" placeholder="Digite seu email:">
    <span asp-validation-for="Titulo" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Descricao">Descrição</label>
    <input asp-for="Descricao" class="form-control"type="text" placeholder="Digite a descrição:">
    <span asp-validation-for="Descricao" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Imagem">Imagem</label>
    <input asp-for="Imagem" class="form-control" type="text" placeholder="Selecione uma imagem:">
    <span asp-validation-for="Imagem" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="CategoriaCorrida">Categoria</label>
    <select asp-for="CategoriaCorrida" asp-items="@Html.GetEnumSelectList<CategoriaCorrida>()" class="form-control">]
           <option>
               --Selecione uma opção--
           </option>
    </select>
    <span asp-validation-for="CategoriaCorrida" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Endereco.Rua">Rua</label>
    <input asp-for="Endereco.Rua" class="form-control"type="text" placeholder="Informe a rua:">
    <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Endereco.Cidade">Cidade</label>
    <input asp-for="Endereco.Cidade" class="form-control"type="text" placeholder="Informe a Cidade:">
    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Endereco.Estado">Estado</label>
    <input asp-for="Endereco.Estado" class="form-control"type="text" placeholder="Informe o Estado:">
    <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>