@model IEnumerable<Clube>

@{
}

<div class="row">
	@foreach(Clube clube in Model)
	{
		<div class="col-md-4">
			<div class="card mb-4 box-shadow">
			<img class="card-img-top" src="@clube.Imagem">
			<div class="card-body">
				<p class="card-text">@clube.Titulo</p>
				<p class="card-text">@clube.Descricao</p>
				<div class="d-flex justify-content-between align-items-center">
				<div class="btn-group">
					<a asp-controller="Clube" asp-action="Details" asp-route-id="@clube.Id" class="btn btn-sm btn-outline-secondary">View</a>

					@if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
					{
						<a asp-controller="Clube" asp-action="Edit" asp-route-id="@clube.Id"		class="btn btn-sm btn-outline-secondary">Edit</a>

						<a class="btn btn-sm btn-outline-danger" asp-controller="Clube" asp-action="Delete" asp-route-id="@clube.Id">Delete</a>
					}			
				</div>
				<small class="text-muted">@clube.CategoriaClube</small>
				</div>
			</div>
			</div>
		</div>
	}
</div>